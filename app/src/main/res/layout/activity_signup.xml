<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView android:id="@+id/home_page___1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/_bg__splash"
            android:background="@drawable/_bg__splash_shape"
            android:layout_width="428dp"
            android:layout_height="926dp" />

        <View
            android:id="@+id/rectangle_3"
            android:background="@drawable/rectangle_3_shape"
            android:layout_width="430dp"
            android:layout_height="928dp" />

        <RelativeLayout
            android:id="@+id/relative_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp">

            <TextView
                android:id="@+id/mtw"
                android:fontFamily="RomanD"
                android:textSize="50sp"
                android:textColor="@color/mtw_color"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mtw_string" />

            <TextView
                android:id="@+id/messages_to_whatsapp"
                android:fontFamily="RomanD"
                android:textSize="14sp"
                android:textColor="@color/mtw_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mtw"
                android:text="@string/messages_to_whatsapp_string" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relative_logo"
            android:layout_marginTop="70dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@raw/name"
                android:drawablePadding="12dp"
                android:hint="name"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/edit_boarder"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@raw/email"
                android:drawablePadding="12dp"
                android:hint="email"
                android:layout_below="@+id/name"
                android:layout_marginTop="20dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/edit_boarder"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@raw/phone_number"
                android:drawablePadding="12dp"
                android:hint="phone number"
                android:layout_below="@+id/email"
                android:layout_marginTop="20dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:inputType="number"
                android:textColor="@color/edit_boarder"/>

            <ImageView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/phone"
                android:background="@raw/sign"
                android:layout_marginTop="70dp"/>



        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>