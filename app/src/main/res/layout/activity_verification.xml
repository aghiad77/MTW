<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView android:id="@+id/home_page___1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/_bg__splash"
                android:background="@drawable/_bg__splash_shape"
                android:layout_width="428dp"
                android:layout_height="926dp" />

            <View
                android:id="@+id/rectangle_3"
                android:background="@drawable/rectangle_3_shape"
                android:layout_width="430dp"
                android:layout_height="928dp" />

            <RelativeLayout
                android:id="@+id/realative_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp">

                <TextView
                    android:id="@+id/mtw"
                    android:fontFamily="RomanD"
                    android:textSize="50sp"
                    android:textColor="@color/mtw_color"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mtw_string" />

                <TextView
                    android:id="@+id/messages_to_whatsapp"
                    android:fontFamily="RomanD"
                    android:textSize="14sp"
                    android:textColor="@color/mtw_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mtw"
                    android:text="@string/messages_to_whatsapp_string" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/realative_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp">


                <TextView
                    android:id="@+id/text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="VERIFICATION CODE WILL BE SENT TO YOUR EMAIL ADRESS PLEASE TYBE IT IN HERE,"
                    android:textColor="@color/_bg__home_page_color"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"/>

                <RelativeLayout
                    android:id="@+id/relative_code"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <EditText
                        android:id="@+id/edit_number_one"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:maxLength="3"/>


                    <EditText
                        android:id="@+id/edit_number_two"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:maxLength="3"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_code"
                    android:layout_marginTop="70dp"
                    android:background="@raw/confirm"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>